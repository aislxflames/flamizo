<header class="sticky top-0 z-50 flex items-center justify-between px-6 bg-black/30 backdrop-blur-2xl h-20">

  <!-- Logo -->
  <a href="/" class="flex justify-center items-center gap-3 text-4xl text-white font-bold">
    <!-- mini logo for sidebar mini 50x50 pixels -->
    <!-- logo for regular state and mobile devices -->
     <span>
      <img class="w-12 rounded-xl" src="/dist/img/logo.png" alt="">
     </span>
    <span class="logo-lg"><b>Flamizo</b></span>
  </a>

  <!-- Header Navbar: style can be found in header.less -->
  <nav class="">
    <!-- Sidebar toggle button-->
    <a class="sidebar-toggle" data-toggle="push-menu" role="button">
      <span class="sr-only">Toggle navigation</span>
    </a>
    <!-- Navbar Right Menu -->
    <div class="flex gap-4">
      <ul class="">

        <li class="relative group flex items-center gap-4">
          <a href="#" class="flex items-center space-x-2">
            <img src="<%= user.displayAvatar %>" class="w-10 h-10 rounded-xl" alt="User Image" />
            <span class="text-2xl text-white">
              <%= user.tag %>
            </span>
          </a>

          <!-- Dropdown menu -->
          <ul
            class="absolute top-full left-0 mt-2 hidden group-hover:block bg-[#1a1a1a] text-white rounded-lg shadow-lg backdrop-blur-md border border-white/10 min-w-[8rem] z-50">
            <li class="px-4 py-2 hover:bg-white/10 transition">
              <a href="/logout" class="block text-sm">Sign out</a>
            </li>
          </ul>
        </li>



      </ul>
    </div>
  </nav>
</header>