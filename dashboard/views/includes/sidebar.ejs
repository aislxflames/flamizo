<aside class="w-100 min-h-screen bg-black/40 backdrop-blur-md text-white p-4">
  <!-- User Panel -->
  <div class="flex items-center space-x-3 mb-6">
    <img src="<%= user.displayAvatar %>" alt="User Image" class="w-12 h-12 rounded-full" />
    <div>
      <p class="text-lg font-semibold"><%= user.username %></p>
    </div>
  </div>

  <!-- Search Form -->
  <form action="/selector" method="get" class="mb-6">
    <div class="flex items-center border border-white/10 rounded overflow-hidden">
      <input type="text" name="q" placeholder="Search for servers..." class="bg-transparent text-white px-3 py-2 w-full focus:outline-none placeholder-white/50" />
      <button type="submit" class="px-3 py-2 hover:bg-white/10">
        <i class="fa fa-search"></i>
      </button>
    </div>
  </form>

  <!-- Server Management Section -->
  <div class="mb-6">
    <h2 class="text-sm uppercase text-white/50 mb-2 tracking-wide">Servers Management</h2>
    <ul class="space-y-2">
      <li>
        <a href="/selector" class="block px-3 py-2 rounded hover:bg-white/10 transition">
          <i class="fa fa-home mr-2"></i> Selector
        </a>
      </li>
    </ul>
  </div>

  <!-- Configuration Section -->
  <% if (locals.guild) { %>
  <div>
    <h2 class="text-sm uppercase text-white/50 mb-2 tracking-wide">Configuration</h2>
    <ul class="space-y-2">
      <li>
        <a href="/manage/<%= guild.id %>/basic" class="block px-3 py-2 rounded hover:bg-white/10 transition">
          <i class="fa fa-gear mr-2"></i> Modules
        </a>
      </li>
      <li>
        <a href="/manage/<%= guild.id %>/greeting" class="block px-3 py-2 rounded hover:bg-white/10 transition">
          <i class="fa fa-bullhorn mr-2"></i> Greeting
        </a>
      </li>
    </ul>
  </div>
  <% } %>
</aside>
